.flex_c {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.flex_c_ce {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.flex_c_s {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.flex_r {
  display: flex;
  justify-content: space-between;
}
.flex_r_no {
  display: flex;
  justify-content: center;
}
.outer {
  box-sizing: border-box;
  padding: 0 60rpx;
}
.outer .top_box {
  box-sizing: border-box;
}
.outer .top_box .image_box {
  margin-top: 20px;
  width: 640rpx;
  height: 600rpx;
  border-radius: 40px;
  background: linear-gradient(to bottom right, blue, pink);
}
.outer .top_box .image_box text {
  margin-top: 20px;
}
.outer .top_box .image_box text:first-child {
  font-size: 40rpx;
  color: white;
  font-weight: 700;
}
.outer .top_box .image_box text:nth-child(2) {
  color: #ada6fa;
  font-size: 26rpx;
}
.outer .top_box .image_box .input_style {
  margin-top: 40rpx;
  padding-left: 70rpx;
  width: 200px;
  height: 40px;
  line-height: 40px;
  background: url(data:image/png;base64,) no-repeat 10px 25rpx;
  background-color: white;
  border-radius: 10px;
  box-sizing: border-box;
}
.outer .bottom-box {
  box-sizing: border-box;
  width: 100%;
}
.outer .bottom-box .text {
  margin: 40rpx 0;
}
.outer .bottom-box .text:first-child {
  font-size: 30px;
}
.outer .bottom-box .type_box .item {
  box-sizing: border-box;
  padding: 30rpx 0;
  align-items: center;
  width: 290rpx;
  height: 300rpx;
  border-radius: 50rpx;
  background-color: #eeeefa;
}
.outer .bottom-box .type_box .item .image_box {
  height: 100rpx;
  width: 100rpx;
  background-color: #ada6fa;
}
.outer .bottom-box .type_box .item text:last-child {
  font-size: 26rpx;
  color: #b8b8c1;
}

